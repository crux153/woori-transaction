{
  "name": "woori-transaction-workspace",
  "private": true,
  "engines": {
    "node": ">=12.20.0",
    "npm": ">=8"
  },
  "scripts": {
    "build": "npm run --silent clean && tsc -b tsconfig.build.json",
    "clean": "rimraf \"packages/**/lib\" \"packages/**/*.tsbuildinfo\"",
    "lint": "eslint \"packages/*/src/**/*.ts\"",
    "prettier": "prettier --write \"packages/*/src/**/*.ts\"",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.4"
  },
  "lint-staged": {
    "*.ts": "prettier --write"
  },
  "workspaces": [
    "packages/woori-transaction-core",
    "packages/woori-transaction"
  ]
}
